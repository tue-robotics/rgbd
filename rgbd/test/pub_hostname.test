<?xml version="1.0"?>
<launch>
    <arg name="rgbd_topic" default="/test_ns/rgbd" />
    <arg name="hosts_topic" default="$(arg rgbd_topic)/hosts" />

    <param name="hostname" value="test_hostname" />
    <param name="rgbd_topic" value="$(arg rgbd_topic)" />
    <param name="hosts_topic" value="$(arg hosts_topic)" />

    <node name="pub_hostname" pkg="rgbd" type="pub_hostname_test" />

    <test test-name="hztest_test" pkg="rostest" type="hztest" name="hztest">
        <param name="topic" value="$(arg hosts_topic)" />
        <param name="hz" value="10.0" />
        <param name="hzerror" value="0.5" />
        <param name="test_duration" value="2.0" />
    </test>

    <test test-name="value_test" pkg="rgbd" type="hostname_sub_value_test" name="valuetest" />
</launch>
